# Azure AI Search Deployment - Environment Variables
# Copy this file to .env and fill in your values

# ==========================
# Azure AI Search
# ==========================
SEARCH_SERVICE_NAME=your-search-service-name
SEARCH_RESOURCE_GROUP=your-resource-group

# Optional: Provide API key directly (otherwise uses Azure CLI)
# SEARCH_API_KEY=your-api-key

# ==========================
# Storage Configuration
# ==========================
STORAGE_ACCOUNT_NAME=your-storage-account
STORAGE_RESOURCE_GROUP=your-storage-resource-group
STORAGE_CONTAINER_NAME=your-container-name

# ==========================
# Azure OpenAI (Foundry)
# ==========================
OPENAI_RESOURCE_URI=https://your-openai-resource.openai.azure.com
OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_EMBEDDING_DIMENSIONS=1536

# Chat completion model (for multimodal features)
OPENAI_CHAT_DEPLOYMENT=gpt-4o

# ==========================
# Cognitive Services (for OCR)
# ==========================
COGNITIVE_SERVICES_URI=https://your-cognitive-services.cognitiveservices.azure.com

# ==========================
# Component Names (optional)
# ==========================
INDEX_NAME=sharepoint-sync-index
INDEXER_NAME=sharepoint-sync-indexer
SKILLSET_NAME=sharepoint-sync-skillset
DATASOURCE_NAME=sharepoint-sync-datasource

# ==========================
# API Version
# ==========================
API_VERSION=2025-11-01-preview
